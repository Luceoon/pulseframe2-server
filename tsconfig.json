{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "importHelpers": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "strict": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "skipLibCheck": true,
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist", "test"]
  }